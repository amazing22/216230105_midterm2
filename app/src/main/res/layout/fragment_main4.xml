<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.midtem_ver2.Main4Activity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="525dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/danggu"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageView18"
            android:layout_below="@+id/imageView18"
            app:srcCompat="@drawable/shopping"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="130dp"
            android:layout_height="95dp"
            android:layout_alignEnd="@+id/imageView17"
            android:layout_alignStart="@+id/imageView17"
            android:layout_below="@+id/imageView17"
            app:srcCompat="@drawable/diy" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/imageView19"
            android:layout_below="@+id/imageView19"
            app:srcCompat="@drawable/food"
            android:layout_alignEnd="@+id/imageView19" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:text="당구"
            android:textSize="23dp"
            android:layout_above="@+id/imageView18"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIY"
            android:textSize="23dp"
            android:layout_below="@+id/imageView17"
            android:layout_alignEnd="@+id/textView8"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="SHOPPING"
            android:textSize="23dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:textSize="23dp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView8" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
