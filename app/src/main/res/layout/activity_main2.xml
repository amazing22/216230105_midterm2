<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFDFDF"
    android:orientation="vertical"
    tools:context="com.example.user.midtem_ver2.Main2Activity">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView43"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button2"
            android:onClick="PB3"
            android:text="확인" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView43"
            android:layout_alignTop="@+id/button16"
            android:ems="10"
            android:hint="학교"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button16"
            android:layout_below="@+id/textView44"
            android:layout_marginTop="25dp"
            android:background="@drawable/button2"
            android:onClick="PB4"
            android:text="확인" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button16"
            android:layout_alignTop="@+id/editText5"
            android:background="@drawable/button2"
            android:onClick="PB2"
            android:text="확인" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView45"
            android:layout_alignStart="@+id/textView44"
            android:ems="10"
            android:hint="학과"
            android:inputType="textPersonName" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton7"
            android:layout_alignBottom="@+id/radioButton7"
            android:layout_alignStart="@+id/textView42"
            android:text="여" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton9"
            android:layout_below="@+id/textView42"
            android:layout_marginTop="8dp"
            android:text="남" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView42"
            android:layout_below="@+id/radioButton6"
            android:layout_marginTop="11dp"
            android:text="학년"
            android:textSize="23dp" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton6"
            android:layout_below="@+id/textView40"
            android:layout_marginTop="7dp"
            android:text="1학년" />

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton8"
            android:layout_alignBottom="@+id/radioButton8"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/radioButton8"
            android:text="2학년" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton9"
            android:layout_alignBottom="@+id/radioButton9"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/radioButton9"
            android:text="3학년" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText7"
            android:layout_below="@+id/textView45"
            android:layout_marginTop="14dp"
            android:text="성별"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText5"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="13dp"
            android:text="" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText8"
            android:layout_below="@+id/editText8"
            android:layout_marginTop="9dp"
            android:text="" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView42"
            android:layout_below="@+id/button13"
            android:text="" />

        <Button
            android:id="@+id/button17"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/button2"
            android:onClick="next"
            android:text="NEXT"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>

</LinearLayout>
