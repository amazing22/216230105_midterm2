<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/danggu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/diy"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img1"
        android:layout_alignStart="@+id/img1" />

    <ImageButton
        android:id="@+id/img3"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/food"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/img2"
        android:layout_alignStart="@+id/img2" />

    <ImageButton
        android:id="@+id/img4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/img3"
        android:layout_below="@+id/img3"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shopping" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="62dp"
        android:textSize="10pt"
        android:text="당구" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="DIY"
        android:layout_above="@+id/img3"
        android:textSize="10pt"
        android:layout_alignStart="@+id/textView39" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:text="FOOD"
        android:layout_alignTop="@+id/img3"
        android:layout_alignEnd="@+id/textView39"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:textSize="10pt"
        android:text="SHOPPING"
        android:layout_alignBottom="@+id/img4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp" />

</RelativeLayout>